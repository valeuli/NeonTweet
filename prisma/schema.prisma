generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tweet {
  id             Int      @id @default(autoincrement())
  userId         Int
  content        String
  createdAt      DateTime @default(now())
}

model Notification {
  id             String   @id @default(uuid())
  userId         Int
  mentionedUser  String?
  tweetId        String
  message        String
  createdAt      DateTime @default(now())
}